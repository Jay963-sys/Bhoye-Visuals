generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id          Int      @id @default(autoincrement())

  
  title       String?
  orientation String?
  uploadedAt  DateTime @default(now())

  
  source      String   @default("cloudinary") // "cloudinary" | "youtube"

  
  url         String?
  publicId    String?

  
  youtubeId   String?
}

